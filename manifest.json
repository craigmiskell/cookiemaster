{
  "manifest_version": 2,
  "name": "CookieMaster",
  "homepage_url": "https://www.stroppykitten.com/cookiemaster",
  "applications": {
    "gecko": {
      "id": "cookiemaster@stroppykitten.com",
      "strict_min_version": "59.0"
    }
  },
  "version": "1.1.0",
  "description": "Allows user control of whether cookies may be set, on a per-domain basis.",

    "icons": {
    "48": "icons/cookies-48.png",
    "96": "icons/cookies-96.png"
  },
   "permissions": [
    "http://*/*",
    "https://*/*",
    "cookies",
    "notifications",
    "privacy",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"

  ],
  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/cookies-32.png",
    "default_title": "CookieMaster",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "all_frames": true,
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["cookie-date.js", "cookie-parse.js", "data-objects.js", "config.js", "background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
